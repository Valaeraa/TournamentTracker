@model TrackerWebUI.Models.TournamentMVCCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TournamentMVCCreateModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TournamentName" class="control-label"></label>
                <input asp-for="TournamentName" class="form-control" />
                <span asp-validation-for="TournamentName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EntryFee" class="control-label"></label>
                <input asp-for="EntryFee" class="form-control" />
                <span asp-validation-for="EntryFee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>

    <div class="col-md-4">
        <div class="form-group">
            @foreach (var item in Model.EnteredTeams)
            {
                <label asp-for="@item" class="control-label">@item.Text</label>
                <input type="checkbox" name="SelectedEnteredTeams" value="@item.Value" class="form-control" />
                <span asp-validation-for="@item" class="text-danger"></span>
            }
        </div>
    </div>

    <div class="col-md-4">
        <div class="form-group">
            @foreach (var item in Model.Prizes)
            {
                <label asp-for="@item" class="control-label">@item.Text</label>
                <input type="checkbox" name="SelectedPrizes" value="@item.Value" class="form-control" />
                <span asp-validation-for="@item" class="text-danger"></span>
            }
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
