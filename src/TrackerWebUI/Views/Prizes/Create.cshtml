@model TrackerLibrary.Models.PrizeModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a New Prize</h1>

<h4>PrizeModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlaceNumber" class="control-label"></label>
                <input asp-for="PlaceNumber" class="form-control" />
                <span asp-validation-for="PlaceNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PlaceName" class="control-label"></label>
                <input asp-for="PlaceName" class="form-control" />
                <span asp-validation-for="PlaceName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrizeAmount" class="control-label"></label>
                <input asp-for="PrizeAmount" class="form-control" />
                <span asp-validation-for="PrizeAmount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PrizePercentage" class="control-label"></label>
                <input asp-for="PrizePercentage" class="form-control" />
                <span asp-validation-for="PrizePercentage" class="text-danger"></span>
