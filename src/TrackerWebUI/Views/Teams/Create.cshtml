@model TrackerWebUI.Models.TeamMVCModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create a New Team</h1>

<h4>TeamMVCModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TeamName" class="control-label"></label>
                <input asp-for="TeamName" class="form-control" />
                <span asp-validation-for="TeamName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    @foreach (var item in Model.TeamMembers)
                    {
                        @*<label asp-for="@item.Text" class="control-label"></label>
                        <input type="checkbox" asp-for="@item.Text" value="@item.Value" class="form-control" />
                        <span asp-validation-for="@item.Text" class="text-danger"></span>*@

                        <div class="checkbox">
                            <label>
                                <input type="checkbox" name="SelectedTeamMembers" value="@item.Value" />@item.Text
                            </label>
                        </div>
                    }
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
